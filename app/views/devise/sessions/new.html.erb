
<body class = "session-stuff">
    <div id="login">
        <h3 class="text-center text-white pt-5"> <%= image_tag('mixhub_logo_50.png')%> </h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <%= form_for resource, url: session_path(resource), :html => {:class => "form", :id => "login-form"} do |f| %>
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <%= f.label :email, class: "text-info" %><br />
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "username", class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :password, class:"text-info", id: "words" %><br />
                                <%= f.password_field :password, autocomplete: "current-password", id: "password", class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <% if devise_mapping.rememberable? %>
                                    <%= f.check_box :remember_me, class: "text-info", id: "remember-me" %>
                                    <%= f.label :remember_me, class: "text-info"%>
                                <%end%>
                            <div class="form-group">
                                <%= f.submit "Log in", class:"btn btn-info btn-md"  %>
                            </div>
                        <%end%>
                    <div id= "register-link" >
                        <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-secondary text-right" %>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</body>
