

<body class = "registration-stuff">
    <div id="registration">
        <h3 class="text-center text-white pt-5"> <%= image_tag('mixhub_logo_50.png')%> </h3>
        <div class="container">
            <div id="registration-row" class="row justify-content-center align-items-center">
                <div id="registration-column" class="col-md-6">
                    <div id="registration-box" class="col-md-12">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => '"form-group row"'}) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                            <h3 class="text-center text-info">Sign Up</h3>
                            <div class="form-group">
                              <%= f.label :first_name, class: "text-info" %><br /> 
                              <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                              <%= f.label :last_name, class: "text-info" %><br /> 
                              <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                              <%= f.label :username, class: "text-info" %><br /> 
                              <%= f.text_field :username, autofocus: true, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label "Image URL", class: "text-info" %><br /> 
                                <%= f.text_field :img_url, autofocus: true, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :email, class: "text-info" %><br /> 
                                <%= f.email_field :email, autocomplete: "email",  autofocus: true, :class => "form-control" %>
                            </div>
                            <div class="form-group">
                                <%=f.label :password, class:"text-info", id: "words" %><br />
                                    <% if @minimum_password_length %>
                                    <em class="text-info">(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %><br />
                                    <%= f.password_field :password, autocomplete: "new-password", id: "password", class: "form-control" %>    
                            </div>
                            <div class="form-group">
                              <%= f.label :password_confirmation, class: "text-info" %><br />
                              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password", class: "form-control"  %>  
                            </div>
                            <div class="form-group">
                                <%= f.submit "Sign Up", class:"btn btn-info btn-md"  %>
                            </div>
                        <%end%>    
                      </div>
                </div>
            </div>
        </div>
    </div>
</body>





